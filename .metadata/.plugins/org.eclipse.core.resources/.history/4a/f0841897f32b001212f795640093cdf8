package vendingmachine;

import vending_simu.tag.Coin;

public final class YenCoin implements Money, Coin{
	public static enum Kind{
		ONE_YEN_COIN {
			@Override
			YenCoin newCoin(){
				return new YenCoin(1);
			}
		}, 
		FIVE_YEN_COIN {
			@Override
			YenCoin newCoin(){
				return new YenCoin(5);
			}
		}, 
		TEN_YEN_COIN {
			@Override
			YenCoin newCoin(){
				return new YenCoin(10);
			}
		}, 
		FIFTY_YEN_COIN {
			@Override
			YenCoin newCoin(){
				return new YenCoin(50);
			}
		}, 
		A_HUNDRED_YEN_COIN {
			@Override
			YenCoin newCoin(){
				return new YenCoin(100);
			}
		}, 
		FIVE_HUNDRED_YEN_COIN {
			@Override
			YenCoin newCoin(){
				return new YenCoin(500);
			}
		}, 
		;
		
		abstract YenCoin newCoin();
	}
	private final Yen amount;
	
	private YenCoin(int amount){
		this.amount= new Yen(amount);
	}
	
	@Override
	public Yen getAmount(){
		return this.amount;
	}

	@Override
	public String getName(){
		return this.amount.toString() + "çŽ‰";
	}
}
