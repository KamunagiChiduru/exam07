package vendingmachine;

public class NotNullConstraintViolationException extends IllegalArgumentException{
	private static final long serialVersionUID= 6137943732953456275L;
	
	public NotNullConstraintViolationException(Object... args){
		super(formatArguments("nullは不許可: ", args));
	}
	
	private static String formatArguments(String prefix, Object...args){
		StringBuilder builder= new StringBuilder(prefix);
		
		builder.append("[");
		for(int i= 0; i < args.length; i++){
			Object arg= args[i];
			
			if(i > 0){
				builder.append(", ");
			}
			
			if(arg == null){
				builder.append("null");
			}
			else{
				builder.append(arg.toString());
			}
		}
		builder.append("]");
		
		return builder.toString();
	}
}
