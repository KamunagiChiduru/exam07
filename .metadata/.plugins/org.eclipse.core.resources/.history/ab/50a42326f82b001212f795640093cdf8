package vendingmachine;

import java.util.Collection;
import java.util.List;

import com.google.common.collect.ImmutableList;

public class VendingMachineSelection implements Scene{
	private final List<VendingMachine> availables;
	
	public VendingMachineSelection(Collection<VendingMachine> availables){
		this.availables= ImmutableList.copyOf(availables);
	}
	
	@Override
	public Scene start(){
		System.out.println("購入する自動販売機を選択してください。");
		System.out.print("[1:ドリンク 2:終了]>");
		int i= selectIdx(1, 2);
		
		if(i == 1){
			System.out.println("ドリンクの自動販売機です。");
		}
		return null;
	}
}
