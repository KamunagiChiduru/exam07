package vendingmachine;

import java.util.List;

public class Simulator{
	private final VendingMachine vendingMachine= null;
	private final Customer customer= null;
	private final OutputManager omanager= null;
	private final InputManager imanager= null;
	
	public void start(){
		List<Product> productList= this.vendingMachine.getProductList();
		
		this.omanager.writeProductList(productList);
		
		this.imanager.selectOperation();
		final int selectIdx= this.imanager.selectBuyProduct(productList);
		
	}
	
	static interface OutputManager{

		void writeProductList(List<Product> productList);
		
	}
	
	static interface InputManager{

		int selectBuyProduct(List<Product> productList);
		
	}
	
	public static void main(String[] args){
		new Simulator().start();
	}
}
